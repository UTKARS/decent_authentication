!!!
%html{lang: I18n.locale}
  %head
    %meta{charset: 'utf-8'}
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    %title= t(:decent_authentication)
  %body
    %section
      = yield
    %header
      %nav
        - if current_user
          = "#{t(:signed_in_as)} #{current_user.email}"
          |
          = link_to t(:sign_out), sign_out_path
        - else
          = link_to t(:register), register_path
          |
          = link_to t(:sign_in), sign_in_path
